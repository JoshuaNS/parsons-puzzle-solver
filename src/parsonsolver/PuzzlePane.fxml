<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane fx:id="PuzzlePane" prefHeight="800.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="parsonsolver.PuzzlePaneController">
    <top>
        <MenuBar BorderPane.alignment="CENTER">
            <menus>
                <Menu mnemonicParsing="false" text="File">
                    <items>
                        <MenuItem mnemonicParsing="false" onAction="#LoadPuzzleSet" text="Load Data" />
                        <MenuItem mnemonicParsing="false" onAction="#ExportResults" text="Export Results" />
                        <MenuItem mnemonicParsing="false" text="Preferences" />
                        <MenuItem mnemonicParsing="false" onAction="#Exit" text="Exit" />
                    </items>
                </Menu>
            <Menu mnemonicParsing="false" text="Navigation">
              <items>
                  <MenuItem mnemonicParsing="false" onAction="#openTitleScreen" text="Return to Title Screen" />
                <MenuItem fx:id="NavPuzzleSelect" disable="true" mnemonicParsing="false" onAction="#openPuzzleSelect" text="Return to Puzzle Select" />
                  <MenuItem fx:id="NavPuzzleEditor" disable="true" mnemonicParsing="false" onAction="#openPuzzleCreator" text="Return to Puzzle Creator" />
              </items>
            </Menu>
            </menus>
        </MenuBar>
    </top>
   <center>
      <VBox fx:id="TitlePane" alignment="CENTER" spacing="10.0" BorderPane.alignment="CENTER">
         <children>
            <Label text="Parson's Programming Puzzles" textAlignment="CENTER" wrapText="true">
               <font>
                  <Font size="48.0" />
               </font>
               <VBox.margin>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </VBox.margin></Label>
            <Label text="Created by Iain Davidson, Travis Ridge, and Joshua Seguin under the supervision of Professor Donald Bailey" textAlignment="CENTER" wrapText="true">
               <VBox.margin>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </VBox.margin></Label>
            <Button mnemonicParsing="false" onAction="#LoadPuzzleSet" prefWidth="140.0" text="Select Puzzle File" />
            <Button fx:id="PuzzleSelectButton" layoutX="457.0" layoutY="449.0" mnemonicParsing="false" onAction="#openPuzzleSelect" prefWidth="140.0" text="Go to Puzzle Select" />
            <Separator fx:id="EditorSeparator" maxWidth="-Infinity" minWidth="-Infinity" prefWidth="150.0" />
            <Button fx:id="NewEditorButton" layoutX="451.0" layoutY="466.0" mnemonicParsing="false" onAction="#NewPuzzleCreatorSet" prefWidth="140.0" text="Create New Puzzle Set" />
            <Button fx:id="LoadEditorButton" layoutX="451.0" layoutY="484.0" mnemonicParsing="false" onAction="#LoadPuzzleCreatorSet" prefWidth="140.0" text="Edit Existing Puzzle Set" />
            <Button fx:id="PuzzleEditorButton" layoutX="451.0" layoutY="501.0" mnemonicParsing="false" onAction="#openPuzzleCreator" prefWidth="140.0" text="Go to Puzzle Editor" />
            <Separator fx:id="DemoSeparator" layoutX="410.0" layoutY="407.0" maxWidth="-Infinity" minWidth="-Infinity" prefWidth="150.0" />
            <Button fx:id="PuzzleDemoButton" layoutX="451.0" layoutY="519.0" mnemonicParsing="false" onAction="#LoadDemo" prefWidth="140.0" text="Puzzle Demo" />
            <Button fx:id="CreatorDemoButton" layoutX="451.0" layoutY="536.0" mnemonicParsing="false" onAction="#CreatorDemo" prefWidth="140.0" text="Creator Demo" />
         </children>
      </VBox>
   </center>
</BorderPane>
